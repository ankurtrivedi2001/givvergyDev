<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>check_campaign_count</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISNEW(), Contract__r.Count_Campaigns__c &gt;= Contract__r.Number_of_campaigns_included__c )</errorConditionFormula>
    <errorMessage>You have already created maximum number of allowed campaigns.</errorMessage>
</ValidationRule>
